<p id="notice"><%%= notice %></p>

<h1 class="page-header"><%= plural_name.titleize %></h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <th><%= attribute.human_name %></th>
        <% end -%>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
        <tr>
          <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <td><%%= <%= singular_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td><%%= link_to 'Show', [:admin, <%= singular_name %>] %></td>
          <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_name %>) %></td>
          <td><%%= link_to 'Destroy', [:admin, <%= singular_name %>], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <%% end %>
    </tbody>
  </table>
</div>

<br>

